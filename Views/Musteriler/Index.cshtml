@model PagedList.IPagedList<MVCSTOK.Models.Entity.tblmusteri>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Müşteriler</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Müşteriler</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Adres</th>
                    <th>Bakiye</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var musteri in Model)
                {
                <tr>
                    <td>@musteri.MüsteriId</td>
                    <td>@musteri.MusteriAd</td>
                    <td>@musteri.MusteriSoyad</td>
                    <td>@musteri.sehir</td>
                    <td>@musteri.MusteriEmail</td>
                    <td>@musteri.MusteriTelefon</td>
                    <td>@musteri.MusteriAdres</td>
                    <td>@String.Format("{0:C}", musteri.bakiye)</td>
                    <td>
                        <a href="/Musteriler/MusteriSil/@musteri.MüsteriId" class="btn btn-danger", onclick = "return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                        <a href="/Musteriler/MusteriGuncelle/@musteri.MüsteriId" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <!-- Sayfalama linkleri -->
        <div class="text-left">
            @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }))
        </div>
        <a href="/Musteriler/MusteriEkle" class="btn btn-primary">Yeni Müşteri</a>

    </div>

</body>
</html>

